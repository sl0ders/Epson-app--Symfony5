{% trans_default_domain "EpsonProjectTrans" %}
{{ form_start(form) }}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="example-wrapper">
        <div class="panel-body">
            <div class="row">
                {# Panel - Filters #}
                <div class="col-md-12 col-xs-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
                                <h5 class="text-black-50"> {{ 'consumable.title.filters'|trans }} </h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"> </i>
                                    </a>
                                </div>
                            </a>
                        </div>
                        <div class="ibox-content">
                            <ul class="nav nav-tabs" id="userTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link active" id="t-identity" data-bs-toggle="tab" href="#tab-identity"
                                       role="tab" aria-controls="tab-identity" aria-selected="true">
                                        <i class="fa fa-id-badge"
                                           aria-hidden="true"> {{ 'form.tab.identity'|trans }}</i>
                                    </a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link" id="t-address" data-bs-toggle="tab" href="#tab-address"
                                       role="tab" aria-controls="tab-address" aria-selected="false">
                                        <i class="fa fa-address-card-o" aria-hidden="true">
                                            {{ 'form.tab.adress'|trans }}
                                        </i>
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content" id="userFormContent">
                                <div id="tab-identity" class="tab-pane fade show active" role="tabpanel"
                                     aria-labelledby="t-identity">
                                    <div class="border-left-right border-bottom p-3">
                                        {{ form_widget(form.identity) }}
                                        {{ form_row(form.roles) }}
                                        {{ form_row(form.isEmailRecipient) }}
                                        {% if edit == false %}
                                            {{ form_row(form.password) }}
                                        {% endif %}
                                    </div>
                                </div>
                                <div id="tab-address" class="tab-pane fade" role="tabpanel" aria-labelledby="t-address">
                                    <div class="border-left-right border-bottom p-3">
                                        {{ form_widget(form.address) }}
                                        {{ form_row(form.company) }}
                                    </div>
                                </div>
                            </div>
                            {{ form_row(form.submit) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
