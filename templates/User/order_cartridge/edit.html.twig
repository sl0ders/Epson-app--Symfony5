{% trans_default_domain "EpsonProjectTrans" %}
{% extends "base.html.twig" %}

{% block title %}{{ "order.cartridge.title.edit"|trans }}{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content dataTables_wrappers animated fadeInRight">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5 class="text-black-50">{{ "order.cartridge.title.edit"|trans({"%orderCode%": order_cartridge.orderCode}) }} </h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"> </i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            {{ include('User/order_cartridge/_form.html.twig') }}
                            <div class="d-flex justify-content-between">
                            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-warning"><i class="fas fa-arrow-left"></i></a>
                                {% if order_cartridge.state == "order.cartridge.validateType.commanded" %}
                                    {{ include('User/order_cartridge/_delete_form.html.twig') }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


