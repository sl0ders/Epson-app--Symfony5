{% extends 'base.html.twig' %}
{% trans_default_domain "EpsonProjectTrans" %}
{% block title %}{{ "printer.title.index" | trans }}{% endblock %}
{% block menuActive_printerList %}active{% endblock menuActive_printerList %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/select2/select2.min.css') }}">
{% endblock %}
{% block body %}
    <div class="wrapper wrapper-content dataTables_wrappers animated fadeInRight">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5 class="text-black-50">{{ "printer.title.index"|trans }} </h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"> </i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content dataTables_wrappers">
                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    <div class="wrapper wrapper-content animated fadeInRight dataTables_wrappers">
                                        <div class="row">
                                            <div class="col-md-12 col-xs-12">
                                                {{ sg_datatables_render(datatable) }}
                                                <div class="row">
                                                    <div class="m-auto col-md-1 offset-5">
                                                        <a class="btn btn-sm btn-primary" href="{{ path('user_printer_addAllFiles') }}">
                                                            Synchroniser
                                                        </a>
                                                    </div>
                                                </div>
                                                <br>
                                                {{ form_start(formFile) }}
                                                {{ form_widget(formFile) }}
                                                {{ form_end(formFile) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {# datatable files #}
    <script src="{{ asset('js/plugins/datapicker/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/plugins/jquery-dataTable/jquery-dataTable.js') }}"></script>
    <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>
    <script src="{{ asset('bundles/sgdatatables/js/pipeline.js') }}"></script>
    <script>
        $(document).ready(function () {
            const datatable = $("#sg-datatables-printer_datatable")
            datatable.addClass("table-responsive")
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'dd/mm/yyyy',
                lang: 'fr'
            });
        });
    </script>
    <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}
