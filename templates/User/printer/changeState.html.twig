{% extends 'base.html.twig' %}
{% trans_default_domain "EpsonProjectTrans" %}
{% block title %} {{ 'printer.text.stateChange'|trans }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="example-wrapper">
                <div class="panel-body">
                    <div class="row">
                        {# Panel - Filters #}
                        <div class="col-md-12 col-xs-12">
                            <div class="ibox float-e-margins">
                                <div class="ibox-title">
                                    <a class="collapse-link" title="{{ 'link.reducePanel'|trans }}">
                                        <h5 class="text-black-50"> {{ 'printer.text.stateChange'|trans }} </h5>
                                        <div class="ibox-tools">
                                            <a class="collapse-link">
                                                <i class="fa fa-chevron-up"> </i>
                                            </a>
                                        </div>
                                    </a>
                                </div>
                                <div class="ibox-content">
                                    <div class="m-auto text-center mb-5">
                                        <i class="fas fa-print fa-5x m-lg"></i><br>
                                        {{ printer.name }}
                                    </div>
                                    {{ form_start(form) }}
                                    <div class="d-flex justify-content-center flex-column w-100">
                                        <div class="w-25 m-auto ">{{ form_label(form.state) }}</div>
                                        <div class="w-25 m-auto pb-2">{{ form_widget(form.state) }}</div>
                                        <div class="w-25 m-auto p-2">{{ form_widget(form.submit) }}</div>
                                    </div>
                                    {{ form_end(form) }}
                                    <a href="{{ app.request.headers.get('referer') }}" class="btn btn-warning float-left"><i class=" fas fa-arrow-left"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
