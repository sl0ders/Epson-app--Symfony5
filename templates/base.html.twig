{% trans_default_domain "EpsonProjectTrans" %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap-5.0.0/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('font-awesome/css/fontawesome.css') }}">
        <link rel="stylesheet" href="{{ asset('font-awesome/css/all.css') }}">
        <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
        <link rel="stylesheet" href="{{ asset('css/plugins/datapicker/datepicker3.css') }}">
        <link rel="stylesheet" href="{{ asset('css/inspinia-custom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
        <script src="{{ asset('js/plugins/jquery-ui/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('js/plugins/jquery-dataTable/jquery-dataTable.js') }}"></script>
        <script src="{{ asset('js/plugins/jeditable/jquery.jeditable.js') }}"></script>
        <script src="{{ asset('js/plugins/fullcalendar/moment.min.js') }}"></script>
        <script src="{{ asset('js/plugins/daterangepicker/daterangepicker.js') }}"></script>
        <script src="{{ asset('js/plugins/datapicker/bootstrap-datepicker.js') }}"></script>
        <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>
        <script src="{{ asset('bootstrap-5.0.0/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/sgdatatables/js/pipeline.js') }}"></script>
        <script src="{{ asset('js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>
        <script src="{{ asset('js/plugins/slimscroll/jquery.slimscroll.min.js') }}"></script>
        <script src="{{ asset("js/plugins/datapicker/locales/bootstrap-datepicker.fr.min.js") }}"></script>
        <script src="{{ asset('js/inspinia.js') }}"></script>
        <script src="{{ asset('js/plugins/pace/pace.min.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}"/>
</head>
<body class="{{ is_granted("ROLE_ADMIN") ? 'admin' : 'user' }}">
<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="profile-element">
                    <a class="text-decoration-none" href="{{ path('dashboard') }}">
                        <img alt="image" class="mb-3 mt-3" src="{{ asset('img/epson-logo.svg') }}"/>
                    </a>
                    <a href="{{ path('user_show', {'id': app.user.id}) }}"
                       class="text-decoration-none font-bold">
                        {{ app.user.fullName }} <br>

                        {% if is_granted('ROLE_ADMIN') %}{{ "user.role.admin" | trans }}{% else %}{{ app.user.company }}{% endif %}
                    </a>
                </div>
                <div class="logo-element">
                    IN+
                </div>
            </li>

            <li class="{% block menuActive_dashboard %}{% endblock %} nav-item">
                <a class="nav-link" href="{{ path('dashboard') }}"><i class="fas fa-chart-pie"> </i> <span
                            class="nav-label"> Dashboard</span></a>
            </li>
            <li class="{% block menuActive_resume %}{% endblock %} nav-item">
                <a class="nav-link" href="{{ path('park_state_index') }}"><i class="fas fa-chart-area"
                                                                             aria-hidden="true"></i>
                    <span class="nav-label">{{ "layout.link.resume"|trans }}</span></a>
            </li>
            <li class="{% block menuActive_printerList %}{% endblock %} nav-item">
                <a class="nav-link" href="{{ path('user_printer_index') }}"><i class="fa fa-print"
                                                                               aria-hidden="true"> </i> <span
                            class="nav-label">{{ "layout.link.printerList"|trans }}</span></a>
            </li>
            <li class="{% block menuActive_historic %}{% endblock %} nav-item">
                <a class="nav-link" href="{{ path('user_search_index') }}">
                    <i class="fa fa-history" aria-hidden="true"> </i>
                    <span class="nav-label">{{ "layout.link.historic"|trans }}</span>
                </a>
            </li>
            <li class="{% block menuActive_parameter %}{% endblock %} nav-item">
                <a class="nav-link" href="{{ path('user_parameter_index') }}">
                    <div class="fa fa-star"></div>
                    <span class="nav-label">{{ "layout.link.parameters"|trans }}</span>
                </a>
            </li>
        </ul>
    </div>
</nav>
<div id="page-wrapper" class="gray-bg">
    <div class="row">
        {{ render(controller('App\\Controller\\HeaderBundleController::getNotification')) }}
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    {% block body %}

                    {% endblock %}
                </div>
            </div>
        </div>

        <div class="footer">
            <div class="pull-right">
                10GB of <strong>250GB</strong> Free.
            </div>
            <div>
                <strong>Copyright</strong> Example Company &copy; 2014-2017
            </div>
        </div>
    </div>
</div>
</body>
</html>
